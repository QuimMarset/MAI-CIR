#:kivy 1.8
#: import CustomButton application.widgets.custom_button


<ContinuePopup>:

    canvas.before:
        Color:
            rgba: root.border_color
        Line:
            width: root.border_width + 2
            rectangle: self.x, self.y, self.width, self.height

    auto_dismiss: False
    background: ''
    separator_height: 0
    size_hint: 0.4, 0.2

    BoxLayout:
        orientation: 'vertical'

        AnchorLayout:
            size_hint_y: 0.4
            Label:
                bold: True
                text: root.label_text
                font_size: root.font_size
                color: root.text_color
                size_hint: 0.5, 0.5

        AnchorLayout:
            size_hint_y: 0.6
            CustomButton:
                border_width: root.border_width
                text: root.button_text
                on_release: root.button_callback()
                background_color: root.button_color
                size_hint: 0.8, 0.8